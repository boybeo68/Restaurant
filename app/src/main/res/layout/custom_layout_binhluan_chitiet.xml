<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/containerBinhluan"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimageviewUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/background"
            android:text="6.6"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"

            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/txtTenNguoiBinhLuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ten người bình luận"
                android:textStyle="bold"
                android:textColor="@color/danghoatDong"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txtTieudebinhluan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề bình luận"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/txtNoiDungbinhluan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh Nhàn Hà nội "
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtChamdiembinhluan"
            android:gravity="bottom"
            android:text="6.6"
            android:textColor="#0ae239"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyle_hinhbinhluan">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>