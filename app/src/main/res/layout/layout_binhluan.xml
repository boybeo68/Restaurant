<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/VietBinhLuan"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/txtDang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="@string/Dang"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:padding="5dp"/>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/bacground_TrangChu">
        <TextView
            android:id="@+id/txtTenQuanAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Gogihouse"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txtDiachiquanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="222 trần hưng đạo"
            android:textSize="12sp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edtTieudeBinhluan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/TieuDeBL"
        android:textSize="12sp"
        android:padding="5dp"
        android:background="#FFF"/>
    <EditText
        android:id="@+id/edtChamDiemBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/ChamDiem"
        android:textSize="15sp"
        android:padding="5dp"
        android:inputType="number"
        android:textColor="@color/danghoatDong"
        android:textStyle="bold"
        android:background="#FFF"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bacground_TrangChu"/>
    <EditText
        android:id="@+id/edtNoiDungBinhluan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/NoiDungBL"
        android:textSize="12sp"
        android:gravity="top"
        android:padding="5dp"
        android:layout_weight="1"
        android:background="#FFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/imgHinhQuan2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/img_mini_themhinh"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/imgHinhQuan3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/img_mini_themhinh"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/imgHinhQuan4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/img_mini_themhinh"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/imgHinhQuan5"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/img_mini_themhinh"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/imgHinhQuan6"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/img_mini_themhinh"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerChonHinhBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bacground_TrangChu"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/btnChonHinh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_weight="1"
            android:background="@color/bacground_TrangChu"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/imgChupHinh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_label_black_24dp"
            android:layout_weight="1"
            android:background="@color/bacground_TrangChu"
            />


    </LinearLayout>



</LinearLayout>